---
import {getCollection} from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';

const projects = (await getCollection('work')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
    title="My Work | Pulkit Kakkar"
    description="Learn about Pulkit Kakkar's most recent projects"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
          title="British Airways"
          tagline="See below to get an idea of my past experience."
          align="start"
      />
      {
        projects.map((project) => (
            <img width="1553"
                 height="873"
                 src={project.data.img}
                 alt={project.data.img_alt || ''}
                 loading="lazy"
                 decoding="async"/>
            <p class="description">{project.data.content}</p>
        ))
      }
    </main>
    <ContactCTA/>
  </div>
</BaseLayout>

<style>
    img {
        margin-top: 1.5rem;
        border-radius: 1.5rem;
        box-shadow: var(--shadow-md);
    }
</style>



